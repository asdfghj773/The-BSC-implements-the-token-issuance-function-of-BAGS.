    <script>
        // åˆå§‹åŒ–Web3
        let web3;
        let factoryContract;
        let userAccount;
        
        // åˆçº¦åœ°å€å’ŒABI
        const FACTORY_ADDRESS = '0xYourFactoryAddress';
        const FACTORY_ABI = [...]; // å·¥å‚åˆçº¦ABI
        
        // æ›´æ–°é¢„è§ˆ
        document.getElementById('tokenName').addEventListener('input', updatePreview);
        document.getElementById('tokenSymbol').addEventListener('input', updatePreview);
        document.getElementById('twitterHandle').addEventListener('input', updatePreview);
        document.getElementById('liquidity').addEventListener('input', updatePreview);
        
        function updatePreview() {
            const name = document.getElementById('tokenName').value || '-';
            const symbol = document.getElementById('tokenSymbol').value || '-';
            const twitter = document.getElementById('twitterHandle').value || '-';
            const liquidity = document.getElementById('liquidity').value || '0';
            
            document.getElementById('previewName').textContent = name;
            document.getElementById('previewSymbol').textContent = symbol.toUpperCase();
            document.getElementById('previewCreator').textContent = twitter;
            document.getElementById('previewLiquidity').textContent = liquidity + ' BNB';
        }
        
        // è¿æ¥é’±åŒ…
        async function connectWallet() {
            if (typeof window.ethereum !== 'undefined') {
                try {
                    const accounts = await ethereum.request({ method: 'eth_requestAccounts' });
                    userAccount = accounts[0];
                    web3 = new Web3(window.ethereum);
                    
                    // åˆå§‹åŒ–åˆçº¦
                    factoryContract = new web3.eth.Contract(FACTORY_ABI, FACTORY_ADDRESS);
                    
                    return true;
                } catch (error) {
                    console.error('è¿æ¥é’±åŒ…å¤±è´¥:', error);
                    return false;
                }
            } else {
                alert('è¯·å®‰è£…MetaMaské’±åŒ…');
                return false;
            }
        }
        
        // åˆ›å»ºä»£å¸
        async function createToken() {
            const tokenName = document.getElementById('tokenName').value;
            const tokenSymbol = document.getElementById('tokenSymbol').value;
            const twitterHandle = document.getElementById('twitterHandle').value;
            const liquidity = document.getElementById('liquidity').value;
            
            if (!tokenName || !tokenSymbol || !twitterHandle || !liquidity) {
                alert('è¯·å¡«å†™æ‰€æœ‰å­—æ®µ');
                return;
            }
            
            if (!await connectWallet()) {
                return;
            }
            
            // æ˜¾ç¤ºè¿›åº¦æ¡
            document.getElementById('progressContainer').style.display = 'block';
            updateProgress(0, 'å‡†å¤‡ä¸­...');
            
            try {
                // æ­¥éª¤1: æ³¨å†ŒXç”¨æˆ·
                updateProgress(20, 'æ³¨å†ŒXç”¨æˆ·...');
                await registerTwitterUser(twitterHandle);
                
                // æ­¥éª¤2: åˆ›å»ºä»£å¸
                updateProgress(40, 'åˆ›å»ºä»£å¸åˆçº¦...');
                const result = await createTokenContract(
                    twitterHandle,
                    tokenName,
                    tokenSymbol,
                    liquidity
                );
                
                // æ­¥éª¤3: é…ç½®ä»£å¸
                updateProgress(60, 'é…ç½®ä»£å¸å‚æ•°...');
                await configureToken(result.tokenAddress);
                
                // æ­¥éª¤4: å¯ç”¨äº¤æ˜“
                updateProgress(80, 'å¯ç”¨äº¤æ˜“...');
                await enableTrading(result.tokenAddress);
                
                // å®Œæˆ
                updateProgress(100, 'å®Œæˆï¼');
                
                // æ˜¾ç¤ºæˆåŠŸæ¨¡æ€æ¡†
                showSuccessModal(result);
                
            } catch (error) {
                console.error('åˆ›å»ºå¤±è´¥:', error);
                alert('åˆ›å»ºå¤±è´¥: ' + error.message);
            }
        }
        
        function updateProgress(percentage, step) {
            document.getElementById('progressBar').style.width = percentage + '%';
            document.getElementById('progressText').textContent = percentage + '%';
            document.getElementById('currentStep').textContent = step;
        }
        
        async function registerTwitterUser(twitterHandle) {
            // è°ƒç”¨åˆçº¦æ³¨å†Œç”¨æˆ·
            const tx = await factoryContract.methods.registerTwitterUser(twitterHandle)
                .send({ from: userAccount });
            return tx;
        }
        
        async function createTokenContract(twitterHandle, name, symbol, liquidity) {
            const weiAmount = web3.utils.toWei(liquidity, 'ether');
            const creationFee = await factoryContract.methods.creationFee().call();
            const totalValue = parseInt(creationFee) + parseInt(weiAmount);
            
            const tx = await factoryContract.methods.createTokenForTwitterUser(
                twitterHandle,
                name,
                symbol,
                weiAmount
            ).send({
                from: userAccount,
                value: totalValue,
                gas: 2000000
            });
            
            // è§£æäº‹ä»¶è·å–ä»£å¸åœ°å€
            const event = tx.events.TokenCreatedViaTwitter;
            return {
                tokenAddress: event.returnValues.token,
                txHash: tx.transactionHash
            };
        }
        
        async function configureToken(tokenAddress) {
            // è¿™é‡Œå¯ä»¥æ·»åŠ é¢å¤–çš„é…ç½®æ­¥éª¤
            await new Promise(resolve => setTimeout(resolve, 2000));
        }
        
        async function enableTrading(tokenAddress) {
            // è¿™é‡Œè°ƒç”¨ä»£å¸åˆçº¦çš„enableTradingæ–¹æ³•
            await new Promise(resolve => setTimeout(resolve, 2000));
        }
        
        function showSuccessModal(result) {
            document.getElementById('modalAddress').textContent = result.tokenAddress;
            document.getElementById('modalTxHash').textContent = result.txHash;
            document.getElementById('modalTime').textContent = new Date().toLocaleString();
            
            // è®¾ç½®é“¾æ¥
            document.getElementById('bscscanLink').href = 
                `https://bscscan.com/token/${result.tokenAddress}`;
            document.getElementById('pancakeLink').href = 
                `https://pancakeswap.finance/swap?outputCurrency=${result.tokenAddress}`;
            document.getElementById('dextoolsLink').href = 
                `https://www.dextools.io/app/bsc/pair-explorer/${result.tokenAddress}`;
            
            document.getElementById('successModal').style.display = 'flex';
        }
        
        function closeModal() {
            document.getElementById('successModal').style.display = 'none';
            // é‡ç½®è¡¨å•
            document.getElementById('tokenName').value = '';
            document.getElementById('tokenSymbol').value = '';
            document.getElementById('twitterHandle').value = '';
            document.getElementById('liquidity').value = '0.1';
            document.getElementById('progressContainer').style.display = 'none';
            updatePreview();
        }
        
        function shareOnTwitter() {
            const name = document.getElementById('tokenName').value;
            const symbol = document.getElementById('tokenSymbol').value;
            const address = document.getElementById('modalAddress').textContent;
            
            const text = `ğŸš€ æˆ‘åˆšåˆšé€šè¿‡ @BagsBot åˆ›å»ºäº† ${name} (${symbol}) ä»£å¸ï¼\n\n` +
                        `åˆçº¦åœ°å€: ${address}\n` +
                        `#BSC #BAGS #Crypto`;
            
            const url = `https://twitter.com/intent/tweet?text=${encodeURIComponent(text)}`;
            window.open(url, '_blank');
        }
        
        function openTwitterModal() {
            document.getElementById('twitterModal').style.display = 'flex';
        }
        
        function closeTwitterModal() {
            document.getElementById('twitterModal').style.display = 'none';
        }
        
        function openTwitter() {
            window.open('https://twitter.com/messages/compose?recipient_id=BagsBot', '_blank');
        }
        
        // åŠ è½½æœ€è¿‘åˆ›å»ºçš„ä»£å¸
        async function loadRecentTokens() {
            try {
                const response = await fetch('/api/recent-tokens');
                const tokens = await response.json();
                
                const container = document.getElementById('recentTokens');
                container.innerHTML = tokens.map(token => `
                    <div style="background: #f8f9fa; padding: 15px; border-radius: 10px; margin-bottom: 10px;">
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <div>
                                <strong>${token.name} (${token.symbol})</strong>
